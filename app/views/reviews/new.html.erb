<div class="d-flex justify-content-center">
  <h1 class="h1_large">New review</h1>
</div>

<div class="d-flex justify-content-center">
  <div class="form_box_new_ship justify-content-center">
    <%= simple_form_for [@ship, @booking, @review] do |f| %>
      <%= f.input :comment %>
      <%= f.input :rating %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
