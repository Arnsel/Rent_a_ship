<div class="d-flex justify-content-center">
  <h1 class="h1_large">EDIT THIS SHIP</h1>
</div>

<div class="d-flex justify-content-center">
  <div class="form_box_new_ship justify-content-center">
    <%= simple_form_for @ship do |ship| %>
      <%= ship.input :name%>
      <%= ship.input :size %>
      <%= ship.input :price %>
      <%= ship.input :picture, as: :file %>
      <%= ship.submit %>
    <% end %>
  </div>
</div>
