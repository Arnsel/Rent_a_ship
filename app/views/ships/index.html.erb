<header>
  <div
    class="p-5 text-center bg-image"
    style="
      background-image: url('https://cdn.mos.cms.futurecdn.net/4MLyNZ66GSMUp7z49Q8k3K-1920-80.jpg.webp');
      height: 500px;">
    <div class="d-flex justify-content-center h-100 align-items-center">
      <div class="text-white">
        <h1 class="mb-3">Welcome to Rent-A-Ship</h1>
        <h4 class="mb-3">Get the perfect spaceship for your Intergalactic trip!</h4>
      </div>
    </div>
  </div>
</header>


<h1 class="d-flex justify-content-center align-items-center">Ship Listings</h1>

<% @ships.each do |ship| %>
  <%= ship.name %>
  <%= ship.size %>
  <%= ship.price %>
  <%= ship.rating %>
<% end %>

<%= link_to "add new ship", new_ship_path%>

<div class="card" style="width: 18rem;">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">Ship Name</h5>
    <p class="card-text">Information about the ship</p>
    <a href="#" class="btn btn-primary">Book Now</a>
  </div>
</div>
